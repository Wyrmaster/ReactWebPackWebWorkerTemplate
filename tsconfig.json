{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"outDir": "./Build",
		"preserveConstEnums": true,
		"moduleResolution": "Node",
		"sourceMap": true,
		"removeComments": true,
		"jsx": "react",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
	},
	"include": [
		"./Source/**/*"
	],
	"exclude": ["node_modules"]
}
